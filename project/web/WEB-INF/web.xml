<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>ViewCourseByLecturerController</servlet-name>
        <servlet-class>controller.exam.ViewCourseByLecturerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TakeExamController</servlet-name>
        <servlet-class>controller.exam.TakeExamController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BaseRequiredStudent</servlet-name>
        <servlet-class>controller.auth.BaseRequiredStudent</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>subjectList</servlet-name>
        <servlet-class>controller.subject.SubjectInfomation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubjectDetail</servlet-name>
        <servlet-class>controller.subject.SubjectDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentStatus</servlet-name>
        <servlet-class>controller.status.StudentStatus</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewCourseByLecturerController</servlet-name>
        <url-pattern>/exam/lecturer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TakeExamController</servlet-name>
        <url-pattern>/exam/take</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BaseRequiredStudent</servlet-name>
        <url-pattern>/BaseRequiredStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>subjectList</servlet-name>
        <url-pattern>/subject/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubjectDetail</servlet-name>
        <url-pattern>/subject/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentStatus</servlet-name>
        <url-pattern>/student/status</url-pattern>
    </servlet-mapping>
</web-app>
